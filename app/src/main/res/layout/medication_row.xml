<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="Medicine Name"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_view_medicine_name"

            android:text="Panadol"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="Dr Name:"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_view_dr_name"

            android:text="Bilal Chaudary"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            android:layout_weight=".70"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_morning"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:clickable="false"
            android:text="@string/Morning_CB" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:text="Quantity"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_morning_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:hint="Quantity"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:maxLines="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".20"
            android:text="Time"
            android:inputType="time"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_morning_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".20"
            android:hint="Time"
            android:inputType="time"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_morning_counter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".10"
            android:hint="Time"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_afternoon"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:clickable="false"
            android:text="Afternoon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:text="Quantity"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_quantity_afternoon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:hint="Quantity"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:maxLines="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".20"
            android:text="Time"
            android:inputType="time"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_afternoon_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".20"
            android:hint="Time"
            android:inputType="time"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_afternoon_counter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".10"
            android:hint="Time"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_night"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:clickable="false"
            android:text="Night" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:text="Quantity"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_night_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:hint="Quantity"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:maxLines="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".20"
            android:text="Time"
            android:inputType="time"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_night_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".20"
            android:hint="Time"
            android:inputType="time"
            android:maxLines="1" />
        <TextView
            android:id="@+id/edit_text_night_counter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".10"
            android:hint="Time"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>


    <TextView
        android:textStyle="bold"
        android:text="Comments"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/text_view_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>